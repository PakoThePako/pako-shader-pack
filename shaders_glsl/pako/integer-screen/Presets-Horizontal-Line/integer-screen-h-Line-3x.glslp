shaders = 1
shader0 = ../shaders/integer-screen.glsl
filter_linear0 = false
scale_type0 = viewport
scale0 = 1.0

textures = "screen"
# change this path to point to your screen image
screen = ../shaders/h-line/2x3Line.png

parameters = "ScreenLUTWidth;ScreenLUTHeight;BGR"
# set these to the width/height of your screen image
ScreenLUTWidth = 2.0
ScreenLUTHeight = 3.0
# enable this if you're using a BGR display
BGR = 0.0